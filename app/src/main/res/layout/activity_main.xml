<?xml version="1.0" encoding="UTF-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:padding="15dp"
        android:background="@drawable/backgroud_button"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:background="@drawable/backgroud_button_circular"
        android:padding="15dp"

        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:background="@drawable/backgroud_button_bordas_redondas"
        android:text="Button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="30dp"
        android:background="@drawable/backgroud_style_button_bordas"
        android:textColor="@color/purple_500"
        android:text="Button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:padding="15dp"
        android:background="@drawable/beckgroud_buttton_fundo_degrade"
        android:layout_margin="30dp"/>
</LinearLayout>

